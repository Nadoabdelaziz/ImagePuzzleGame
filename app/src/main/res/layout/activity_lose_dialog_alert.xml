    <Button
        android:id="@+id/exitbtn2"
        android:layout_width="35dp"
        android:layout_height="44dp"
        android:text="X"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textLose"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/exitbtn2"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="YOU LOST!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#9C27B0"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageLose"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/textLose"
        android:layout_marginTop="6dp"
        android:background="#ffff"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/timesup" />


    <Button
        android:id="@+id/continues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLose"
        android:layout_marginTop="43dp"
        android:background="#9C27B0"
        android:gravity="center"
        android:text="Continue ( Watch AD )"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <!--        app:drawableTint="#FFFFFF"-->
    <!--        app:drawableRightCompat="@drawable/ic_photo_camera_black_24dp" />-->


    <Button
        android:id="@+id/restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/continues"
        android:layout_marginTop="43dp"
        android:background="#9C27B0"
        android:gravity="center"
        android:text="RESTART"
        android:textColor="@color/white"
        android:textSize="20sp" />
<!--        app:drawableTint="#FFFFFF"-->
<!--        app:drawableRightCompat="@drawable/ic_photo_camera_black_24dp" />-->


    <Button
        android:id="@+id/backmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restart"
        android:layout_marginTop="35dp"
        android:background="#9C27B0"
        android:radius="50dp"
        android:text="BACK"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>